<UserControl x:Class="Novaroma.Win.UserControls.PosterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Novaroma.Win.Converters"
             mc:Ignorable="d" >
    <Border BorderThickness="1" BorderBrush="{StaticResource GrayBrush7}">
        <Image Source="{Binding Path=Poster, Converter={converters:DefaultPosterConverter}, Mode=OneWay}" />
    </Border>
</UserControl>
